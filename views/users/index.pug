doctype html
html
  head
    title Users
  body
    h2 Create User
    form(action="/users/create", method="post")
      .form-group
        label(for="username") Username:
        input(type="text", name="username")
      .form-group
        label(for="name") Full Name:
        input(type="text", name="name")
      input(type="submit")

    h2 Users

    table.table
      thead
        tr
          th Username
          th Full Name
          th Actions
      tbody
        each user in users
          tr
            td= user.username
            td= user.name
            td
              a(href="/users/" + user.id + "/destroy") Delete
